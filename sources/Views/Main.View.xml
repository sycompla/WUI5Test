<mvc:View xmlns="sap.m" xmlns:core="sap.ui.core" xmlns:l="sap.ui.layout" xmlns:mvc="sap.ui.core.mvc" controllerName="sources.Controllers.Main">
    <Shell>
        <App class="sapUiResponsiveMargin" width="auto"  xmlns:f="sap.ui.layout.form">
            <pages>
                <Page title="test">
                    <content>
                        <List id="companyList" items="{/companies}">
                        <items>
                            <StandardListItem
                                    title="{name}"
                                    description="{city}"
                            />
                        </items>
                    </List>
                    </content>
                    <Button
                            id="testButton"
                            text="Tile page"
                            press=".onTilePress"/>
                    <Button
                            id="testButton2"
                            text="Micro Chart In Tile page"
                            press=".onMicroChartInTilePress"/>
                    <Button
                            id="testButton3"
                            text="Micro Chart In Generic Tiles page"
                            press=".onGenericTilesPress"/>
                    <Button
                            id="testButton4"
                            text="MultiCombo page"
                            press=".onMultiComboPress"/>
                    <Button
                            id="testButton5"
                            text="Dynamic layout"
                            press=".onMasterPress"/>
                    <Button
                            id="testButton6"
                            text="Dynamic page"
                            press=".onDynamicPagePress"/>
                    <Button
                            id="testButton7"
                            text="Analytical table on dynamic page"
                            press=".onAnalyticalTablePress"/>
                </Page>
            </pages>
        </App>
    </Shell>
</mvc:View>