<mvc:View controllerName="sources.Controllers.MicroChartInTile"
          xmlns="sap.m" xmlns:suite="sap.suite.ui.microchart" xmlns:m="sap.m" xmlns:mvc="sap.ui.core.mvc">
    <Page
            showHeader="false"
            enableScrolling="false" >
        <m:GenericTile header="Comparative Annual Totals"
                       subheader="By Region" frameType="OneByOne" press="press">
            <m:tileContent>
                <m:TileContent footer="Compare across regions" unit="EUR">
                    <m:content>
                        <suite:ComparisonMicroChart scale="M" size="Responsive">
                            <suite:data>
                                <suite:ComparisonMicroChartData title="Americas"
                                                          value="234" color="Good" />
                                <suite:ComparisonMicroChartData title="EMEA"
                                                          value="97" color="Error" />
                                <suite:ComparisonMicroChartData title="APAC"
                                                          value="197" color="Critical" />
                            </suite:data>
                        </suite:ComparisonMicroChart>
                    </m:content>
                </m:TileContent>
            </m:tileContent>
        </m:GenericTile>
    </Page>
</mvc:View>